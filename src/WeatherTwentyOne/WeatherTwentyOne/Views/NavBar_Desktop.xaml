<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherTwentyOne.Views.NavBar_Desktop">
    <Grid BackgroundColor="{StaticResource Background_Mid}"
              
              >
        <StackLayout Orientation="Vertical"
                         Margin="0,50"
                         Spacing="50">
            <ImageButton x:Name="HomeTab"
                    Source="desktop_home_icon.png"
                         Clicked="HomeTab_Clicked"
                />
            <ImageButton x:Name="FavoritesTab" Source="desktop_favorites_icon.png"
                         Clicked="FavoritesTab_Clicked"
                         />
            <ImageButton x:Name="MapTab" Source="desktop_map_icon.png"
                         Clicked="MapTab_Clicked"
                         />
        </StackLayout>
        <ImageButton x:Name="SettingsTab" 
                     Source="desktop_settings_icon.png"
                     VerticalOptions="End"
                     Margin="0,0,0,40"
                     Clicked="SettingsTab_Clicked"
                    />
    </Grid>
</ContentView>