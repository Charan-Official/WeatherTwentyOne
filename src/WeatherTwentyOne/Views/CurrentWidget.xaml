<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Spacing="15"
             x:Class="WeatherTwentyOne.Views.CurrentWidget">
    <Image 
        WidthRequest="200"
        HeightRequest="200"
        Aspect="AspectFit"
        Source="weather_partly_cloudy_day.png" />
    <Label
        Text="{Binding CurrentWeather.Temperature}"
        HorizontalOptions="Center"
        class="Title1" />
    <Grid>
        <Frame
            CornerRadius="15"
            HorizontalOptions="Center"
            Padding="0"
            BackgroundColor="{StaticResource Primary}">
            <Grid
                RowDefinitions="3,*,3"
                ColumnDefinitions="15,*,15"
                RowSpacing="0"
                ColumnSpacing="0"
                HorizontalOptions="Center">
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="{Binding CurrentWeather.Phrase}"
                    HorizontalOptions="Center"
                    FontSize="17"/>
            </Grid>
        </Frame>
    </Grid>
</StackLayout>